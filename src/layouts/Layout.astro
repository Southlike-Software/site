import PostHog from "../components/posthog.astro";
import "../styles/global.css";

const {
  title = "Southlike Software — IA para Imobiliárias",
  description = "Automatize captação, atendimento e agendamentos com IA confiável, integrada ao seu CRM. Foque em vender mais imóveis com eficiência e escala.",
} = Astro.props;
---

<!doctype html>
<html lang="pt-BR" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0b" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/favicon.svg" />
    <meta property="og:locale" content="pt_BR" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <PostHog />
  </head>
  <body
    class="h-full bg-neutral-950 text-neutral-100 antialiased selection:bg-purple-500/20"
  >
    <a
      href="#conteudo"
      class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:rounded focus:bg-neutral-800 focus:px-3 focus:py-2"
      >Pular para o conteúdo</a
    >
    <div id="conteudo">
      <slot />
    </div>
  </body>
</html>
