---
const phases = [
  {
    title: "Semana 1-2: Análise e Mapeamento",
    items: [
      "Auditoria completa dos canais de leads",
      "Mapeamento dos processos atuais",
      "Definição de scripts personalizados",
    ],
  },
  {
    title: "Semana 3-4: Implementação Inicial",
    items: [
      "Configuração do sistema de IA",
      "Integração com WhatsApp Business",
      "Testes e ajustes iniciais",
    ],
  },
  {
    title: "Mês 2: Expansão e Otimização",
    items: [
      "Integração com todos os canais",
      "Refinamento contínuo das respostas",
      "Análise de performance",
    ],
  },
  {
    title: "Mês 3: Consolidação",
    items: [
      "Treinamento completo da equipe",
      "Documentação personalizada",
      "Transição para operação autônoma",
    ],
  },
];
---

<section class="mx-auto max-w-7xl px-6 pb-16 pt-16 lg:px-8">
  <div class="mx-auto max-w-3xl text-center">
    <h2 class="text-3xl font-semibold tracking-tight sm:text-4xl">Cronograma de Implementação</h2>
  </div>
  <div class="mx-auto mt-12 max-w-3xl">
    <ol class="relative border-l border-neutral-800 pl-6">
      {phases.map((phase, idx) => (
        <li class="mb-10 last:mb-0">
          <div class="absolute -left-[9px] mt-1 h-4 w-4 rounded-full border border-purple-400 bg-neutral-950 ring-4 ring-purple-500/20"></div>
          <div class="rounded-lg border border-neutral-800 bg-neutral-900/60 p-5 shadow-sm">
            <h3 class="text-base font-medium tracking-tight sm:text-lg">{phase.title}</h3>
            <ul class="mt-3 space-y-2 text-sm text-neutral-300">
              {phase.items.map((i) => (
                <li class="flex gap-3">
                  <span class="text-purple-400">•</span>
                  <span>{i}</span>
                </li>
              ))}
            </ul>
          </div>
        </li>
      ))}
    </ol>
  </div>
</section>

