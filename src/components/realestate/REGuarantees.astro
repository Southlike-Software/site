---
import Container from "../ui/Container.astro";
import SectionHeading from "../ui/SectionHeading.astro";

const guarantees = [
  {
    title: "Garantia de 30 Dias",
    desc: "Se em 30 dias o sistema não estiver funcionando conforme prometido, cancelamento imediato com reembolso integral.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  },
  {
    title: "Entrega no Prazo",
    desc: "Se ultrapassarmos o prazo acordado no escopo, o trabalho extra é por nossa conta — sem custo adicional.",
    icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
  },
];
---

<Container class="py-20">
  <SectionHeading
    title="Garantias"
    subtitle="Compromissos concretos para sua tranquilidade."
  />
  <div class="mx-auto mt-10 grid max-w-3xl grid-cols-1 gap-6 sm:grid-cols-2">
    {guarantees.map((g) => (
      <div class="rounded-xl border border-green-500/10 bg-green-500/5 p-6">
        <svg class="h-8 w-8 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d={g.icon} />
        </svg>
        <h3 class="mt-4 font-heading text-lg font-medium">{g.title}</h3>
        <p class="mt-2 text-sm text-neutral-300">{g.desc}</p>
      </div>
    ))}
  </div>
</Container>
