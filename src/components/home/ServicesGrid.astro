---
import Card from "../ui/Card.astro";
import SectionHeading from "../ui/SectionHeading.astro";
import Container from "../ui/Container.astro";

const services = [
  {
    title: "Auditoria de IA",
    desc: "Análise completa dos seus processos para identificar onde IA gera mais impacto.",
    icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2",
  },
  {
    title: "Chatbot WhatsApp",
    desc: "Atendimento 24/7 com IA que qualifica leads e agenda reuniões automaticamente.",
    icon: "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z",
  },
  {
    title: "Integração com CRM",
    desc: "Conecte leads, tarefas e status entre seus sistemas sem trabalho manual.",
    icon: "M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4",
  },
  {
    title: "Dashboards Inteligentes",
    desc: "Visualize métricas de conversão, gargalos e performance em tempo real.",
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
  },
  {
    title: "Automação de Marketing",
    desc: "Fluxos automáticos de nutrição, follow-up e reengajamento de leads.",
    icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
  {
    title: "Soluções Customizadas",
    desc: "APIs, integrações e sistemas sob medida para necessidades específicas.",
    icon: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
  },
];
---

<Container class="py-20">
  <SectionHeading
    title="Como Podemos Ajudar"
    subtitle="Serviços de automação e IA adaptados ao seu negócio."
  />
  <div class="mt-12 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {services.map((s) => (
      <Card hover>
        <svg class="h-8 w-8 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d={s.icon} />
        </svg>
        <h3 class="mt-4 font-heading text-lg font-medium">{s.title}</h3>
        <p class="mt-2 text-sm text-neutral-300">{s.desc}</p>
      </Card>
    ))}
  </div>
  <div class="mt-10 text-center">
    <a
      href="/servicos"
      class="text-sm text-brand-400 transition hover:text-brand-300"
      onclick="posthog?.capture('cta_click', { location: 'services_grid', cta: 'ver_todos' })"
    >Ver todos os serviços &rarr;</a>
  </div>
</Container>
