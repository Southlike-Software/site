---
const notFor = [
  "Sua imobiliária recebe menos de 30 leads mensais",
  "Sua equipe responde leads em menos de 10 minutos consistentemente",
  "Você não utiliza WhatsApp Business ou CRM estruturado",
  "Você busca uma solução genérica sem personalização",
];
const idealFor = [
  "Leads aguardam horas ou dias por uma resposta",
  "Você perde oportunidades fora do horário comercial",
  "Sua equipe dedica tempo excessivo em follow-ups manuais",
  "Você busca vantagem competitiva através de tecnologia",
];
---

<section class="mx-auto max-w-7xl px-6 pb-16 pt-16 lg:px-8">
  <div class="mx-auto max-w-3xl text-center">
    <h2 class="text-3xl font-semibold tracking-tight sm:text-4xl">Qualificação</h2>
    <p class="mt-3 text-neutral-300">Este Programa NÃO é Adequado Se / É IDEAL Se</p>
  </div>
  <div class="mt-10 grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div class="rounded-lg border border-neutral-800 bg-neutral-900/60 p-6">
      <h3 class="text-lg font-medium">Este Programa NÃO é Adequado Se:</h3>
      <ul class="mt-4 space-y-3 text-sm text-neutral-300">
        {notFor.map((item) => (
          <li class="flex gap-3">
            <span class="text-red-400">✕</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
    <div class="rounded-lg border border-neutral-800 bg-neutral-900/60 p-6">
      <h3 class="text-lg font-medium">É IDEAL Para Sua Imobiliária Se:</h3>
      <ul class="mt-4 space-y-3 text-sm text-neutral-300">
        {idealFor.map((item) => (
          <li class="flex gap-3">
            <span class="text-green-400">✓</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

