---
const kicker = "IA para Imobiliárias";
const headline = "Capte, qualifique e agende com IA — em escala";
const sub =
  "Chatbots e automações que atendem 24/7 no WhatsApp e no seu site, integrados ao seu CRM e ao calendário.";
---

<section class="relative isolate overflow-hidden">
  <div
    class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top_right,rgba(168,85,247,0.25),transparent_45%),radial-gradient(ellipse_at_bottom_left,rgba(59,130,246,0.20),transparent_40%)]"
  >
  </div>
  <div class="mx-auto max-w-7xl px-6 pb-8 pt-24 sm:pt-28 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <p class="text-sm font-medium text-purple-400">{kicker}</p>
      <h1
        class="mt-3 text-balance text-4xl font-semibold tracking-tight sm:text-5xl md:text-6xl"
      >
        {headline}
      </h1>
      <p class="mt-6 text-pretty text-neutral-300">
        {sub}
      </p>
      <div
        class="mt-10 flex flex-col items-center justify-center gap-3 sm:flex-row"
      >
        <a
          href="#contato"
          class="inline-flex items-center justify-center rounded-md bg-gradient-to-r from-purple-500 to-indigo-500 px-6 py-3 text-sm font-medium text-white shadow hover:from-purple-400 hover:to-indigo-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-purple-400"
          onclick="posthog?.capture('cta_click', { location: 'hero', cta: 'contato' })"
          >Começar agora</a
        >
        <a
          href="#recursos"
          class="inline-flex items-center justify-center rounded-md border border-neutral-800 bg-neutral-900/60 px-6 py-3 text-sm font-medium text-neutral-200 hover:bg-neutral-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-neutral-600"
          onclick="posthog?.capture('cta_click', { location: 'hero', cta: 'recursos' })"
          >Ver recursos</a
        >
      </div>
      <p class="mt-3 text-xs text-neutral-500">
        Sem spam. Cancelamento a qualquer momento.
      </p>
    </div>
  </div>
</section>
