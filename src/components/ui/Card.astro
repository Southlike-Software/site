---
interface Props {
  hover?: boolean;
  class?: string;
}
const { hover = false, class: className = "" } = Astro.props;
---

<div
  class:list={[
    "rounded-xl border border-neutral-800 bg-surface-900/60 p-6",
    hover && "transition hover:border-brand-500/30 hover:bg-surface-900",
    className,
  ]}
>
  <slot />
</div>
