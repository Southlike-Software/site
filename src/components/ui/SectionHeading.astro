---
interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  centered?: boolean;
}
const { title, subtitle, badge, centered = true } = Astro.props;
---

<div class:list={["max-w-3xl", centered && "mx-auto text-center"]}>
  {badge && (
    <span class="mb-3 inline-block rounded-full bg-brand-500/10 px-3 py-1 text-xs font-medium text-brand-400 ring-1 ring-inset ring-brand-500/20">
      {badge}
    </span>
  )}
  <h2 class="font-heading text-3xl font-semibold tracking-tight sm:text-4xl">{title}</h2>
  {subtitle && <p class="mt-4 text-neutral-300">{subtitle}</p>}
</div>
