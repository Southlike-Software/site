---
interface Props {
  class?: string;
}
const { class: className = "" } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center rounded-full bg-brand-500/10 px-2.5 py-0.5 text-xs font-medium text-brand-400 ring-1 ring-inset ring-brand-500/20",
    className,
  ]}
>
  <slot />
</span>
