---
interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "ghost";
  class?: string;
  [key: string]: any;
}
const { href, variant = "primary", class: className = "", ...rest } = Astro.props;

const base = "inline-flex items-center justify-center rounded-lg font-medium transition focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-400";
const variants: Record<string, string> = {
  primary: "bg-gradient-to-r from-brand-500 to-brand-400 px-6 py-3 text-sm text-surface-950 shadow hover:from-brand-400 hover:to-brand-300",
  secondary: "border border-neutral-700 bg-surface-900 px-6 py-3 text-sm text-white hover:border-neutral-600",
  ghost: "px-4 py-2 text-sm text-neutral-300 hover:text-white",
};
const Tag = href ? "a" : "button";
---

<Tag href={href} class:list={[base, variants[variant], className]} {...rest}>
  <slot />
</Tag>
