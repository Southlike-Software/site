---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
}
const { title, description, pubDate, slug, tags = [] } = Astro.props;

const formattedDate = pubDate.toLocaleDateString("pt-BR", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<a
  href={`/blog/${slug}`}
  class="group block rounded-xl border border-neutral-800 bg-surface-900/60 p-6 transition hover:border-brand-500/30 hover:bg-surface-900"
>
  <time class="text-xs text-neutral-500">{formattedDate}</time>
  <h3 class="mt-2 font-heading text-lg font-medium transition group-hover:text-brand-400">{title}</h3>
  <p class="mt-2 text-sm text-neutral-300 line-clamp-2">{description}</p>
  {tags.length > 0 && (
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-full bg-brand-500/10 px-2 py-0.5 text-xs text-brand-400 ring-1 ring-inset ring-brand-500/20">
          {tag}
        </span>
      ))}
    </div>
  )}
</a>
